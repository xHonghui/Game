<?xml version="1.0" encoding="utf-8"?>
<com.nft.quizgame.view.LoadingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <com.nft.quizgame.common.view.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:sl_shadow_angle="90"
        app:sl_shadow_color="#C1D8FF"
        app:sl_shadow_distance="@dimen/sw_6dp"
        app:sl_shadow_radius="@dimen/sw_18dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="@dimen/sw_300dp"
            android:layout_height="@dimen/sw_300dp"
            android:background="@drawable/loading_view_bg"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading" />
    </com.nft.quizgame.common.view.ShadowLayout>
</com.nft.quizgame.view.LoadingView>