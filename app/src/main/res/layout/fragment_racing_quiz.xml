<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="targetData"
            type="androidx.lifecycle.MutableLiveData" />

        <variable
            name="correctData"
            type="androidx.lifecycle.MutableLiveData" />

        <variable
            name="delegate"
            type="com.nft.quizgame.function.quiz.RacingQuizFragment.ActionDelegate" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main_bg"
        android:clipChildren="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/sw_60dp"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_60dp"
                android:layout_marginStart="@dimen/sw_60dp"
                android:layout_marginTop="@dimen/sw_27dp"
                android:onClick="@{()->delegate.back()}"
                android:src="@mipmap/icon_back_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/total_coin_layout"
                layout="@layout/quiz_total_coin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_32dp"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintLeft_toRightOf="@id/img_back"
                app:layout_constraintTop_toTopOf="@id/img_back" />

            <TextView
                android:id="@+id/txt_title"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_racing"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sw_48sp"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_back" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/sw_162dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_title">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:paddingBottom="@dimen/sw_60dp">

                        <com.nft.quizgame.common.view.NumberTextView
                            android:id="@+id/txt_correct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/sw_120dp"
                            android:layout_marginBottom="@dimen/sw_9dp"
                            android:text="@{String.valueOf(correctData)}"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sw_84sp"
                            app:layout_constraintBottom_toTopOf="@id/quiz_content_layout"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <com.nft.quizgame.common.view.NumberTextView
                            android:id="@+id/txt_slash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sw_6dp"
                            android:text="/"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sw_60sp"
                            app:layout_constraintBaseline_toBaselineOf="@id/txt_correct"
                            app:layout_constraintLeft_toRightOf="@id/txt_correct" />

                        <com.nft.quizgame.common.view.NumberTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sw_6dp"
                            android:text="@{String.valueOf(targetData)}"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sw_60sp"
                            app:layout_constraintBaseline_toBaselineOf="@id/txt_correct"
                            app:layout_constraintLeft_toRightOf="@id/txt_slash" />

                        <include
                            android:id="@+id/quiz_content_layout"
                            layout="@layout/quiz_content_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/sw_60dp"
                            android:layout_marginRight="@dimen/sw_60dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/space" />

                        <include
                            android:id="@+id/time_layout"
                            layout="@layout/quiz_timer_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Space
                            android:id="@+id/space"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/sw_156dp"
                            app:layout_constraintLeft_toLeftOf="@id/time_layout"
                            app:layout_constraintRight_toRightOf="@id/time_layout"
                            app:layout_constraintTop_toTopOf="@id/time_layout" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/loading_view_without_bg" />

        <include layout="@layout/touch_blocking_view" />
    </FrameLayout>
</layout>
