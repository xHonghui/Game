<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/default_layout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <!--style="@style/AppText"-->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:text="挑战失败"
        android:textColor="#414141"
        android:textSize="@dimen/sw_42sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--style="@style/AppText"-->
    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_30dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/sw_21dp"
        android:text="观看广告可重新挑战"
        android:textColor="#414141"
        android:textSize="@dimen/sw_42sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_goneMarginTop="@dimen/sw_0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>