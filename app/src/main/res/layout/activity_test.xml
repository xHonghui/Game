<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nft.quizgame.TestActivity">

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:layout_margin="@dimen/sw_30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_add_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sw_30dp"
        android:text="加金币"
        android:textColor="@color/white"
        android:background="@drawable/shape_withdraw_newuser"

        android:layout_marginLeft="@dimen/sw_60dp"
        app:layout_constraintTop_toBottomOf="@id/et_number"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/tv_sub_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sw_30dp"
        android:text="减金币"
        android:textColor="@color/white"
        android:background="@drawable/shape_withdraw_newuser"
        android:visibility="gone"

        android:layout_marginLeft="@dimen/sw_30dp"
        app:layout_constraintTop_toBottomOf="@id/et_number"
        app:layout_constraintLeft_toRightOf="@id/tv_add_coin"
        />

    <TextView
        android:id="@+id/tv_update_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sw_30dp"
        android:text="升级弹窗"
        android:textColor="@color/white"
        android:background="@drawable/shape_withdraw_newuser"

        android:layout_marginStart="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_coin"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_update_download_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sw_30dp"
        android:text="升级下载弹窗"
        android:textColor="@color/white"
        android:background="@drawable/shape_withdraw_newuser"

        android:layout_marginStart="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_30dp"
        app:layout_constraintLeft_toRightOf="@id/tv_update_dialog"
        app:layout_constraintTop_toBottomOf="@id/tv_add_coin"
        />


    <EditText
        android:id="@+id/et_account"
        android:layout_width="@dimen/sw_0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="游客id设置"

        android:layout_margin="@dimen/sw_30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_account"
        app:layout_constraintTop_toBottomOf="@id/tv_update_dialog"
        />


    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sw_30dp"
        android:text="设置"
        android:textColor="@color/white"
        android:background="@drawable/shape_withdraw_newuser"
        android:layout_marginEnd="@dimen/sw_60dp"

        app:layout_constraintTop_toTopOf="@id/et_account"
        app:layout_constraintBottom_toBottomOf="@id/et_account"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/et_account"
        />

    <TextView
        android:id="@+id/account_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sw_48sp"
        android:textIsSelectable="true"

        app:layout_constraintTop_toBottomOf="@id/et_account"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/sw_30dp"
        />

    <include
        android:id="@+id/loading_view"
        layout="@layout/loading_view_without_bg"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>
